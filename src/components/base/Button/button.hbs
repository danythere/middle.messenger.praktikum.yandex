<button
   class='{{classes.button}}
      {{getClass 'button_color_' background classes}}
      {{getClass 'button_style_' style classes}}
      {{getClass 'button_size_' size classes}}'
>
   {{#if icon}}
      <img src='{{icon}}' class='{{classes.button__icon}}' />
   {{else}}
      {{capture}}
   {{/if}}
</button>