<div class="{{classes.registration}}">
  <div class="{{classes.registration-ground}}">
    <div class="{{classes.registration-ground__name}}">{{> heading title="Регистрация" classes=headingClasses}}
    </div>
    <div class="{{classes.registration-ground__input-block}}">
        {{#each inputs}}
    <div
            class="{{glueClasses this.classes.registration-input-block__input-form this.classes.registration-ground__input-block_margin}}"
    >
      <label class="{{this.classes.registration-ground__label}}" for="{{this.id}}">{{this.capture}}</label>
      {{> input classes=this.inputClasses width=400 height=20 type=this.type name=this.name id=this.id}}
    </div>
  {{/each}} 
  </div>
    {{> button capture="Создать профиль" id="create-account-button" background="primary" classes=buttonClasses  }}
  </div>
</div>